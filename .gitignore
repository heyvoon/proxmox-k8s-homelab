    KUBECONFIG: /home/dev/.kube/config

- name: Install Cilium CNI
  kubernetes.core.helm:
    name: cilium
    chart_ref: cilium/cilium
    release_namespace: kube-system
    values:
      operator:
        replicas: 1
      hubble:
        relay:
          enabled: true
        ui:
          enabled: true
  environment:
    KUBECONFIG: /home/dev/.kube/config
